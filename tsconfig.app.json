{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["vite-env.d.ts", "src/**/*.ts", "src/**/*.vue", "tests/unit/*.ts", "tests/e2e/*.ts"],
  "exclude": ["tests/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
