{
  "extends": [
    "config:recommended",
    "group:all",
    "schedule:weekly",
    ":widenPeerDependencies"
  ],
  "enabledManagers": [
    "npm"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "npm"
      ],
      "automerge": true,
      "minimumReleaseAge": "2 days"
    },
    {
      "rangeStrategy": "auto",
      "matchPackageNames": [
        "/npm/"
      ]
    },
    {
      "matchPackageNames": [
        "vite-plugin-dts"
      ],
      "matchCurrentVersion": "3.2.0",
      "enabled": false
    }
  ],
  "timezone": "Europe/Helsinki",
  "dependencyDashboard": true
}
